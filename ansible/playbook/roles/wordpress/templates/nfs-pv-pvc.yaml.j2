---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: mysql-pv
  namespace: {{espacionombre}}
spec:
  storageClassName: storage-nfs
  capacity:
    storage: 2Gi
  accessModes:
    - ReadWriteMany
  nfs:
    server: {{nfs_server}}
    path: {{nfs_path}}/mysql
---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: wordpress-pv
  namespace: {{espacionombre}}
spec:
  storageClassName: storage-nfs
  capacity:
    storage: 2Gi
  accessModes:
    - ReadWriteMany
  nfs:
    server: {{nfs_server}}
    path: {{nfs_path}}/wordpress
---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: mysql-pvc
  namespace: {{espacionombre}}
spec:
  storageClassName: storage-nfs
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 1.5Gi
---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: {{ nombreapp }}-pvc
  namespace: {{espacionombre}}
spec:
  storageClassName: storage-nfs
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 1.5Gi

